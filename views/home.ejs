<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <style>
    .display-4{
      font-family: 'Kaushan Script', cursive;
      color: #f39c12;
    }
  </style>
  <body>
    <%- include('./partials/nav') %>

    
    <!-- Hero Section -->
    <section class=" hero-section  text-center py-5">
      <div class="container">
        <h1 class="display-4" >Welcome to Task Manager</h1>
        <p class="lead">
          Effortlessly manage your tasks with our simple and intuitive app.
        </p>
        <% if (user) { %>
        <a href="/task/addtask/<%= user._id %>" class="btn btn-primary btn-lg">Add New Task</a>
        <% } else { %>
        <a href="/user/signin" class="btn btn-primary btn-lg">Sign In to Add Tasks</a>
        <% } %>
      </div>
    </section>

    <!-- Features Section -->
    <section class="features py-5 ">
      <div class="container">
        <div class="row">
          <div class="col-md-4 mb-4">
            <div class="card border-light shadow-sm">
              <div class="card-body text-center">
                <h5 class="card-title">Organize Tasks</h5>
                <p class="card-text">
                  Easily create, edit, and delete tasks with a simple interface.
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-4">
            <div class="card border-light shadow-sm">
              <div class="card-body text-center">
                <h5 class="card-title">Track Progress</h5>
                <p class="card-text">
                  Monitor your task completion and stay productive.
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-4">
            <div class="card border-light shadow-sm">
              <div class="card-body text-center">
                <h5 class="card-title">Collaborate</h5>
                <p class="card-text">
                  Work with your team and get tasks done together efficiently.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer text-center py-4">
      <div class="container">
        <p class="mb-0">&copy; 2024 Task Manager. All rights reserved.</p>
      </div>
    </footer>

    <%- include('./partials/script') %>
  </body>
</html>
